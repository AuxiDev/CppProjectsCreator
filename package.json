{
    "name": "cpp-project-creator",
    "displayName": "C++ Projects Creator",
    "description": "Creates a C++ project structure with tasks.json",
    "version": "0.2.1",
    "publisher": "AUXI",
    "repository": "https://github.com/AuxiDev/CppProjectsCreator",
    "license": "MIT",
    "icon": "./images/icon.png",
    "activationEvents": [
        "onCommand"
    ],
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./extension.js",
    "contributes": {
        "configuration": {
            "title": "C++ Project Creator",
            "properties": {
                "cppProjectCreator.compilerCommandPrefix": {
                    "type": "string",
                    "default": "g++",
                    "description": "The compiler command for the C++ compiler your a using. For example: g++, clang, msvc"
                },
                "cppProjectCreator.compilerArgs": {
                    "type": "object",
                    "default": {
                        "gcc": [
                            "src/*.cpp",
                            "-o",
                            "build/build.exe"
                        ],
                        "clang": [
                            "src/*.cpp",
                            "-o",
                            "build/build.exe"
                        ],
                        "msvc": [
                            "src/*.cpp",
                            "/Febuild/build.exe"
                        ],
                        "g++": [
                            "src/*.cpp",
                            "-o",
                            "build/build.exe"
                        ]
                    },
                    "description": "Compiler arguments for different C++ compilers",
                    "markdownDescription": "Compiler arguments for different C++ compilers. Add or modify compiler arguments as needed.",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "commands": [
            {
                "command": "extension.createCppProject",
                "title": "Create C++ Project"
            },
            {
                "command": "extension.runCppBuildTask",
                "title": "Run C++ Project"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "extension.runCppBuildTask",
                    "group": "navigation",
                    "when": "editorLangId == cpp",
                    "icon": "$(triangle-right)",
                    "title": "Run C++ Project",
                    "order": 0
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.runCppBuildTask",
                    "when": "resourceLangId == cpp"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "eslint": "^7.32.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-standard": "^4.1.0",
        "vscode": "1.0.0-beta.2"
    }
}
